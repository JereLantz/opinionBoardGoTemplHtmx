package components

templ AddNewForm(){
    <form>
        <label for="opinionTitle">Opinion title:</label>
        <input id="opinionTitle" name="opinionTitle" placeholder="Title"/>
        <br/>
        <label for="opinion">Write your opinion:</label>
        <textarea name="opinion" id="opinion" cols="50" rows="10" placeholder="Opinion"/>
        <button type="submit">Submit</button>
    </form>
}
