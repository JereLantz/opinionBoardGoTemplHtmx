package components

import "opinionBoardGoTemplHtmx/utils"
import "strconv"

templ Opinion(opin utils.Opinion){
    <div>
        <div>
            <h3>{opin.Title}</h3>
            <p>{opin.Opinion}</p>
        </div>

        <div>
            <p>{strconv.Itoa(opin.Score)}</p>
            <button>
                +
            </button>
            <button>
                -
            </button>
        </div>
    </div>
}
